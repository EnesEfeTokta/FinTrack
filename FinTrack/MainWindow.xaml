<Window x:Class="FinTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTrack"
        mc:Ignorable="d"
        Title="FinTrack Dashboard" Height="650" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#0D1117">
    <Grid>
        <!-- Ana Grid: Sol menü ve sağ içerik alanı -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Background="#161B22" Grid.Column="0">
            <StackPanel>
                <!-- Kullanıcı Bilgisi -->
                <Border Margin="10" CornerRadius="50" Width="100" Height="100" Background="White">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="https://via.placeholder.com/100" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <TextBlock Text="ENES EFE TOKTA" HorizontalAlignment="Center" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" Margin="0,5,0,20"/>

                <!-- Menü Öğeleri -->
                <Button Content="🏠 Dashboard" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📊 Accounting" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="💰 Budgeting" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="🎯 Targets" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📋 Reports" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="👤 Account" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Ana İçerik Alanı -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Başlık ve Butonlar -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="DASHBOARD" Grid.Column="0" FontSize="24" FontWeight="Bold" Foreground="#C9D1D9" Margin="0,0,0,20" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="🔔" Background="#21262D" Foreground="#C9D1D9" BorderThickness="0" FontSize="20" Margin="0,0,10,0" ToolTip="Bildirimler">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="🔔" FontSize="20"/>
                                    <Ellipse Width="16" Height="16" Fill="#F85149" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="2"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="3" Foreground="#C9D1D9" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button Content="⚙️" Background="#21262D" Foreground="#C9D1D9" BorderThickness="0" FontSize="20" ToolTip="Ayarlar">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- İçerik -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Üst Satır: Gelir, Gider, Döviz Kurları, Hedef Bütçe -->
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#161B22" CornerRadius="10" Padding="15" Margin="0,0,10,10">
                        <StackPanel>
                            <TextBlock Text="Gelir" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="8.056 TL" Foreground="#C9D1D9" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="#F85149" CornerRadius="10" Padding="15" Margin="10,0,10,10">
                        <StackPanel>
                            <TextBlock Text="Gider" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="5.856 TL" Foreground="#C9D1D9" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Background="#161B22" CornerRadius="10" Padding="15" Margin="10,0,10,10">
                        <StackPanel>
                            <TextBlock Text="Döviz Kurları" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="₺ / $: 0.030" Foreground="#C9D1D9" FontSize="18" Margin="0,5,0,0"/>
                            <TextBlock Text="₺ / €: 0.009" Foreground="#C9D1D9" FontSize="18"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="3" Background="#161B22" CornerRadius="10" Padding="15" Margin="10,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Hedef Bütçeler" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold"/>
                            <ListBox Margin="0,5,0,0" Background="Transparent" BorderThickness="0" Height="70">
                                <ListBoxItem>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tatil Fonu: " Foreground="#C9D1D9" FontSize="14"/>
                                        <TextBlock Text="20.000 TL" Foreground="#C9D1D9" FontSize="14" Margin="5,0,0,0"/>
                                        <ProgressBar Value="50" Maximum="100" Width="50" Height="10" Margin="10,0,0,0" Background="#30363D" Foreground="#238636"/>
                                        <TextBlock Text="50%" Foreground="#C9D1D9" FontSize="12" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Araba Alımı: " Foreground="#C9D1D9" FontSize="14"/>
                                        <TextBlock Text="50.000 TL" Foreground="#C9D1D9" FontSize="14" Margin="5,0,0,0"/>
                                        <ProgressBar Value="40" Maximum="100" Width="50" Height="10" Margin="10,0,0,0" Background="#30363D" Foreground="#238636"/>
                                        <TextBlock Text="40%" Foreground="#C9D1D9" FontSize="12" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Eğitim Fonu: " Foreground="#C9D1D9" FontSize="14"/>
                                        <TextBlock Text="10.000 TL" Foreground="#C9D1D9" FontSize="14" Margin="5,0,0,0"/>
                                        <ProgressBar Value="75" Maximum="100" Width="50" Height="10" Margin="10,0,0,0" Background="#30363D" Foreground="#238636"/>
                                        <TextBlock Text="75%" Foreground="#C9D1D9" FontSize="12" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </ListBoxItem>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Orta Satır: Harcama Kategorileri ve Hızlı Gelir/Gider Ekle -->
                <Border Grid.Row="1" Grid.Column="0" Background="#161B22" CornerRadius="10" Padding="15" Margin="0,10,10,10" HorizontalAlignment="Stretch">
                    <StackPanel HorizontalAlignment="Stretch">
                        <TextBlock Text="Harcama Kategorileri" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Pasta Grafik (Placeholder)" Foreground="#8B949E" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Background="#161B22" CornerRadius="10" Padding="15" Margin="10,10,0,10" HorizontalAlignment="Stretch">
                    <StackPanel HorizontalAlignment="Stretch">
                        <TextBlock Text="Hızlı Gelir/Gider Ekle" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                            <RadioButton Content="Gelir" Foreground="#C9D1D9" Margin="0,0,20,0" IsChecked="True" GroupName="TransactionType"/>
                            <RadioButton Content="Gider" Foreground="#C9D1D9" GroupName="TransactionType"/>
                        </StackPanel>
                        <ComboBox Width="200" Margin="0,10,0,0" HorizontalAlignment="Center" SelectedIndex="0">
                            <ComboBoxItem Content="Seçiniz..." IsEnabled="False"/>
                            <ComboBoxItem Content="Maaş" Tag="Gelir"/>
                            <ComboBoxItem Content="Freelance" Tag="Gelir"/>
                            <ComboBoxItem Content="Market" Tag="Gider"/>
                            <ComboBoxItem Content="Fatura" Tag="Gider"/>
                            <ComboBoxItem Content="Eğlence" Tag="Gider"/>
                            <ComboBoxItem Content="Diğer"/>
                        </ComboBox>
                        <TextBox Width="200" Margin="0,10,0,0" Padding="5" Text="Tutar (TL)" Foreground="#8B949E" HorizontalAlignment="Center"/>
                        <TextBox Width="200" Margin="0,10,0,0" Padding="5" Text="Açıklama" Foreground="#8B949E" HorizontalAlignment="Center"/>
                        <Button Content="Ekle" Background="#238636" Foreground="#C9D1D9" Width="100" Margin="0,10,0,0" Padding="5" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Alt Satır: Gelir/Gider Geçmişi -->
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#161B22" CornerRadius="10" Padding="15" Margin="0,10,0,0" HorizontalAlignment="Stretch">
                    <StackPanel HorizontalAlignment="Stretch">
                        <TextBlock Text="Gelir/Gider Geçmişi" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <ScrollViewer Height="100" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="15 Mart 2025 - Gelir: 2.000 TL (Maaş)" Foreground="#C9D1D9" FontSize="14" Margin="0,2" TextWrapping="Wrap"/>
                                <TextBlock Text="14 Mart 2025 - Gider: 500 TL (Market)" Foreground="#C9D1D9" FontSize="14" Margin="0,2" TextWrapping="Wrap"/>
                                <TextBlock Text="13 Mart 2025 - Gider: 300 TL (Fatura)" Foreground="#C9D1D9" FontSize="14" Margin="0,2" TextWrapping="Wrap"/>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>