<Window x:Class="FinTrack.AccountingDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTrack"
        mc:Ignorable="d"
        Title="FinTrack Accounting" Height="650" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF272537">
    <Grid>
        <!-- Ana Grid: Sol menü ve sağ içerik alanı -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Background="#FF2D3E50" Grid.Column="0">
            <StackPanel>
                <!-- Kullanıcı Bilgisi -->
                <Border Margin="10" CornerRadius="50" Width="100" Height="100" Background="White">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="https://via.placeholder.com/100" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <TextBlock Text="ENES EFE TOKTA" HorizontalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,5,0,20"/>

                <!-- Menü Öğeleri -->
                <Button Content="🏠 Dashboard" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📊 Accounting" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="💰 Budgeting" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="🎯 Targets" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📋 Reports" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="👤 Account" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Ana İçerik Alanı -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Başlık ve Butonlar -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ACCOUNTING" Grid.Column="0" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="🔔" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="20" Margin="0,0,10,0" ToolTip="Bildirimler">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="🔔" FontSize="20"/>
                                    <Ellipse Width="16" Height="16" Fill="Red" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="2"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="3" Foreground="White" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button Content="⚙️" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="20" ToolTip="Ayarlar"/>
                </StackPanel>
            </Grid>

            <!-- İçerik Alanı: TabControl -->
            <Border Grid.Row="1" CornerRadius="10" Background="#FF7DC0E5" Margin="10">
                <TabControl Background="Transparent" BorderThickness="0">
                    <!-- Giderler Sekmesi -->
                    <TabItem Header="Giderler" Margin="9,1,-13,-3" FontWeight="Bold" Foreground="#FF4DA8DA">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Filtreleme Kutucuğu -->
                            <Border Grid.Row="0" Background="#FF4DA8DA" CornerRadius="10" Padding="10" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍 Filtreler" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                        <TextBlock Text="Kategori:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <ComboBox x:Name="CategoryFilter" Width="150" Margin="5" Foreground="#FF4DA8DA">
                                            <ComboBoxItem Content="Tümü" IsSelected="True"/>
                                            <ComboBoxItem Content="Gıda"/>
                                            <ComboBoxItem Content="Barınma"/>
                                            <ComboBoxItem Content="Giyisi"/>
                                            <ComboBoxItem Content="Spor"/>
                                            <ComboBoxItem Content="Ulaşım"/>
                                            <ComboBoxItem Content="Eğlence"/>
                                            <ComboBoxItem Content="Tıbbi"/>
                                            <ComboBoxItem Content="Diğer"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                        <TextBlock Text="Tarih Aralığı:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <ComboBox x:Name="DateFilter" Width="150" Margin="5" Foreground="#FF4DA8DA">
                                            <ComboBoxItem Content="Son 1 Gün"/>
                                            <ComboBoxItem Content="Son 1 Hafta"/>
                                            <ComboBoxItem Content="Son 1 Ay" IsSelected="True"/>
                                            <ComboBoxItem Content="Son 3 Ay"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Gider Listesi Kutucuğu -->
                            <Border Grid.Row="1" Background="#FF4DA8DA" CornerRadius="10" Padding="10" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="📋 Gider Listesi" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Background="Transparent" BorderThickness="0" RowBackground="Transparent" AlternatingRowBackground="#FF2D3E50" Foreground="#FF4DA8DA">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Tutar" Width="100" Binding="{Binding Amount}" Foreground="White"/>
                                            <DataGridTextColumn Header="Tarih" Width="150" Binding="{Binding Date}" Foreground="White"/>
                                            <DataGridTextColumn Header="Fiyat" Width="100" Binding="{Binding Price}" Foreground="White"/>
                                            <DataGridTextColumn Header="Kategori" Width="*" Binding="{Binding Category}" Foreground="White"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Border>

                            <!-- Çizgi Grafiği Kutucuğu -->
                            <Border Grid.Row="2" Background="#FF4DA8DA" CornerRadius="10" Padding="10" Margin="5" Height="200">
                                <StackPanel>
                                    <TextBlock Text="📊 Kategorilere Göre Harcamalar" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="Çizgi Grafiği Placeholder" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- Gelirler Sekmesi -->
                    <TabItem Header="Gelirler" Margin="17,1,-21,-3" FontWeight="Bold" Foreground="#FF4DA8DA">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="#FF4DA8DA" CornerRadius="10" Padding="10" Margin="5">
                                <TextBlock Text="🔍 Filtreleme seçenekleri buraya eklenebilir" Foreground="White" FontSize="14"/>
                            </Border>
                            <Border Grid.Row="1" Background="#FF4DA8DA" CornerRadius="10" Padding="10" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="📋 Gelir Listesi" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Background="Transparent" BorderThickness="0" RowBackground="Transparent" AlternatingRowBackground="#FF2D3E50" Foreground="#FF4DA8DA">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Tutar" Width="100" Binding="{Binding Amount}" Foreground="White"/>
                                            <DataGridTextColumn Header="Tarih" Width="150" Binding="{Binding Date}" Foreground="White"/>
                                            <DataGridTextColumn Header="Kaynak" Width="*" Binding="{Binding Source}" Foreground="White"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- Kalanlar Sekmesi -->
                    <TabItem Header="Kalanlar" Margin="25,1,-29,-3" FontWeight="Bold" Foreground="#FF4DA8DA">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="#FF4DA8DA" CornerRadius="10" Padding="10" Margin="5">
                                <TextBlock Text="💰 Kalan Bakiye Özeti" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            </Border>
                            <Border Grid.Row="1" Background="#FF4DA8DA" CornerRadius="10" Padding="10" Margin="5">
                                <TextBlock Text="Kalan bakiye detayları buraya gelecek" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>