<Window x:Class="FinTrack.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTrack"
        mc:Ignorable="d"
        Title="FinTrack" Height="500" Width="612"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#0D1117">
        <Image Source="/Images/Icons/conversation.png" 
               Width="40" 
               HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="40" />

        <Grid x:Name="Login" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="518*"/>
                <ColumnDefinition Width="47*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="102*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                <Border.Background>
                    <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- User Icon -->
                        <RowDefinition Height="Auto" />
                        <!-- Username -->
                        <RowDefinition Height="Auto" />
                        <!-- Password -->
                        <RowDefinition Height="Auto" />
                        <!-- Options -->
                        <RowDefinition Height="Auto" />
                        <!-- Buton -->
                    </Grid.RowDefinitions>

                    <!-- User Icon -->
                    <Image Source="/Images/Icons/login.png" 
                           Width="136" 
                           Grid.Row="0" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,10" />

                    <!-- Username Input -->
                    <Grid Grid.Row="1" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/Icons/user.png" 
                               Width="20" Height="20" 
                               Margin="5" />
                        <TextBox Grid.Column="1" 
                                 BorderThickness="1" 
                                 BorderBrush="#30363D" 
                                 Padding="5" 
                                 Text="Username/Email" 
                                 Foreground="#C9D1D9">
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </TextBox.Background>
                        </TextBox>
                    </Grid>

                    <!-- Password Input -->
                    <Grid Grid.Row="2" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/Icons/padlock.png" 
                               Width="20" Height="20" 
                               Margin="5" />
                        <PasswordBox Grid.Column="1" 
                                     BorderThickness="1" 
                                     BorderBrush="#30363D" 
                                     Padding="5" 
                                     Password="Enes Efe Tokta" 
                                     Foreground="#C9D1D9">
                            <PasswordBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </PasswordBox.Background>
                        </PasswordBox>
                    </Grid>

                    <!-- Options: Remember me ve Forgot password -->
                    <Grid Grid.Row="3" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="Remember me" 
                                  Foreground="#8B949E" />
                        <TextBlock Grid.Column="1" 
                                   Text="Forgot password?" 
                                   Foreground="#8B949E" 
                                   HorizontalAlignment="Right" 
                                   TextDecorations="Underline" />
                    </Grid>

                    <!-- Login Butonu -->
                    <Button Content="Login" 
                            Grid.Row="4" 
                            Margin="20,10" 
                            Background="#238636" 
                            Foreground="#C9D1D9" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center"
                            Width="200"
                            Height="20"
                            Padding="10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="Register" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="518*"/>
                <ColumnDefinition Width="47*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="102*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                <Border.Background>
                    <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- User Icon -->
                        <RowDefinition Height="Auto" />
                        <!-- Username -->
                        <RowDefinition Height="Auto" />
                        <!-- Email -->
                        <RowDefinition Height="Auto" />
                        <!-- Password -->
                        <RowDefinition Height="Auto" />
                        <!-- Options -->
                        <RowDefinition Height="Auto" />
                        <!-- Buton -->
                    </Grid.RowDefinitions>

                    <!-- User Icon -->
                    <Image Source="/Images/Icons/add.png" 
                           Width="136" 
                           Grid.Row="0" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,10" />

                    <TextBlock Grid.Row="0" 
                               Text="Go To Back" 
                               Foreground="#C9D1D9" 
                               FontSize="15"
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Top"
                               TextDecorations="Underline" Margin="10,10,0,0" />

                    <!-- Username Input -->
                    <Grid Grid.Row="1" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/Icons/user.png" 
                               Width="20" Height="20" 
                               Margin="5" />
                        <TextBox Grid.Column="1" 
                                 Width="240"
                                 BorderThickness="1" 
                                 BorderBrush="#30363D" 
                                 Padding="5" 
                                 Text="Username" 
                                 Foreground="#C9D1D9">
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </TextBox.Background>
                        </TextBox>
                        <Image Grid.Column="2" Source="/Images/Icons/x.png" Width="20" Height="20" Margin="5" HorizontalAlignment="Right" />
                    </Grid>

                    <!-- Email Input -->
                    <Grid Grid.Row="2" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/Icons/email.png" 
                               Width="20" Height="20" 
                               Margin="5" />
                        <TextBox Grid.Column="1" 
                                 Width="240"
                                 BorderThickness="1" 
                                 BorderBrush="#30363D" 
                                 Padding="5" 
                                 Text="Email" 
                                 Foreground="#C9D1D9">
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </TextBox.Background>
                        </TextBox>
                        <Image Grid.Column="2" Source="/Images/Icons/x.png" Width="20" Height="20" Margin="5" HorizontalAlignment="Right" />
                    </Grid>

                    <!-- Password Input -->
                    <Grid Grid.Row="3" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/Icons/padlock.png" 
                               Width="20" Height="20" 
                               Margin="5" />
                        <PasswordBox Grid.Column="1" 
                                     BorderThickness="1" 
                                     BorderBrush="#30363D" 
                                     Width="240"
                                     Padding="5" 
                                     Password="Enes Efe Tokta" 
                                     Foreground="#C9D1D9">
                            <PasswordBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </PasswordBox.Background>
                        </PasswordBox>
                        <Image Grid.Column="1" Source="/Images/Icons/eyeopen.png" Width="20" Height="20" Margin="5" HorizontalAlignment="Right" />
                        <Image Grid.Column="2" Source="/Images/Icons/tick.png" Width="20" Height="20" Margin="5" HorizontalAlignment="Right" />
                    </Grid>

                    <!-- Options: I approve -->
                    <Grid Grid.Row="4" Margin="257,10,107,10" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Content="I approve." 
                                  Foreground="#8B949E" 
                                  HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Register Button -->
                    <Button Content="Register" 
                            Grid.Row="5" 
                            Margin="20,10" 
                            Background="#238636" 
                            Foreground="#C9D1D9" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center"
                            Width="200"
                            Height="20"
                            Padding="10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="Forgot" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="518*"/>
                <ColumnDefinition Width="47*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="102*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                <Border.Background>
                    <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- User Icon -->
                        <RowDefinition Height="Auto" />
                        <!-- Username -->
                        <RowDefinition Height="Auto" />
                        <!-- Email -->
                        <RowDefinition Height="Auto" />
                        <!-- Buton -->
                    </Grid.RowDefinitions>

                    <!-- User Icon -->
                    <Image Source="/Images/Icons/message.png" 
                           Width="136" 
                           Grid.Row="0" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,10" />

                    <TextBlock Grid.Row="0" 
                               Text="Go To Back" 
                               Foreground="#C9D1D9" 
                               FontSize="15"
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Top"
                               TextDecorations="Underline" Margin="10,10,0,0" />

                    <!-- Username Input -->
                    <Grid Grid.Row="1" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/Icons/user.png" 
                               Width="20" Height="20" 
                               Margin="5" />
                        <TextBox Grid.Column="1" 
                                 BorderThickness="1" 
                                 BorderBrush="#30363D" 
                                 Padding="5" 
                                 Text="Username" 
                                 Foreground="#C9D1D9">
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </TextBox.Background>
                        </TextBox>
                    </Grid>

                    <!-- Email Input -->
                    <Grid Grid.Row="2" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/Icons/email.png" 
                               Width="20" Height="20" 
                               Margin="5" />
                        <TextBox Grid.Column="1" 
                                 BorderThickness="1" 
                                 BorderBrush="#30363D" 
                                 Padding="5" 
                                 Text="Email" 
                                 Foreground="#C9D1D9">
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </TextBox.Background>
                        </TextBox>
                    </Grid>

                    <!-- Forgot Button -->
                    <Button Content="Send Code" 
                            Grid.Row="3" 
                            Margin="20,10" 
                            Background="#238636" 
                            Foreground="#C9D1D9" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center"
                            Width="200"
                            Height="20"
                            Padding="10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="CodeVerification" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="518*"/>
                <ColumnDefinition Width="47*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="102*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                <Border.Background>
                    <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- User Icon -->
                        <RowDefinition Height="Auto" />
                        <!-- Code -->
                        <RowDefinition Height="Auto" />
                        <!-- Options -->
                        <RowDefinition Height="Auto" />
                        <!-- Buton -->
                    </Grid.RowDefinitions>

                    <!-- Panel Icon -->
                    <Image Source="/Images/Icons/done.png" 
                           Width="136" 
                           Grid.Row="0" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,10" />

                    <TextBlock Grid.Row="0" 
                               Text="Go To Back" 
                               Foreground="#C9D1D9" 
                               FontSize="15"
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Top"
                               TextDecorations="Underline" Margin="10,10,0,0" />

                    <!-- Code Input -->
                    <Grid Grid.Row="1" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/Icons/verify.png" 
                               Width="20" Height="20" 
                               Margin="5" />
                        <TextBox Grid.Column="1" 
                                 BorderThickness="1" 
                                 BorderBrush="#30363D" 
                                 Padding="5" 
                                 Text="Enter Code" 
                                 Foreground="#C9D1D9">
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </TextBox.Background>
                        </TextBox>
                    </Grid>

                    <!-- Forgot Button -->
                    <Button Content="Send Code" 
                            Grid.Row="3" 
                            Margin="20,10" 
                            Background="#238636" 
                            Foreground="#C9D1D9" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center"
                            Width="200"
                            Height="20"
                            Padding="10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Timer -->
                    <TextBlock Grid.Row="2" Text="05:00" Foreground="#F85149" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="PasswordChange" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="518*"/>
                <ColumnDefinition Width="47*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="102*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                <Border.Background>
                    <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- User Icon -->
                        <RowDefinition Height="Auto" />
                        <!-- Password -->
                        <RowDefinition Height="Auto" />
                        <!-- Options -->
                        <RowDefinition Height="Auto" />
                        <!-- Buton -->
                    </Grid.RowDefinitions>

                    <!-- Panel Icon -->
                    <Image Source="/Images/Icons/passwordpanel.png" 
                           Width="136" 
                           Grid.Row="0" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,10" />

                    <TextBlock Grid.Row="0" 
                               Text="Go To Back" 
                               Foreground="#C9D1D9" 
                               FontSize="15"
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Top"
                               TextDecorations="Underline" Margin="10,10,0,0" />

                    <!-- Password Input -->
                    <Grid Grid.Row="2" Margin="20,10" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Images/Icons/padlock.png" 
                               Width="20" Height="20" 
                               Margin="5" />
                        <PasswordBox Grid.Column="1" 
                                     BorderThickness="1" 
                                     BorderBrush="#30363D" 
                                     Width="240"
                                     Padding="5" 
                                     Password="Enes Efe Tokta" 
                                     Foreground="#C9D1D9">
                            <PasswordBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </PasswordBox.Background>
                        </PasswordBox>
                        <Image Grid.Column="1" Source="/Images/Icons/eyeopen.png" Width="20" Height="20" Margin="5" HorizontalAlignment="Right" />
                        <Image Grid.Column="2" Source="/Images/Icons/tick.png" Width="20" Height="20" Margin="5" HorizontalAlignment="Right" />
                    </Grid>

                    <!-- Forgot Button -->
                    <Button Content="Change" 
                            Grid.Row="3" 
                            Margin="20,10" 
                            Background="#238636" 
                            Foreground="#C9D1D9" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center"
                            Width="200"
                            Height="20"
                            Padding="10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>