<Window x:Class="FinTrack.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTrack"
        xmlns:login="clr-namespace:FinTrack.Codes.LoginPanel"
        mc:Ignorable="d"
        Title="FinTrack" Height="500" Width="612"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToCollapsedConverter x:Key="BoolToCollapsedConverter"/>
    </Window.Resources>

    <Grid>
        <Grid x:Name="MainGrid" Background="#0D1117">
            <Button 
                Width="40" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="40" BorderBrush="{x:Null}" Margin="0,0,5,5">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Icons/conversation.png"/>
                </Button.Background>
            </Button>

            <!-- Login Grid -->
            <Grid x:Name="Login" Visibility="{Binding LoginVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="518*"/>
                    <ColumnDefinition Width="47*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="102*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                    <Border.Background>
                        <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Source="/Images/Icons/login.png" 
                               Width="136" 
                               Grid.Row="0" 
                               HorizontalAlignment="Center" 
                               Margin="0,20,0,10" />

                        <Grid Grid.Row="1" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/user.png" 
                                   Width="20" Height="20" 
                                   Margin="5" />
                            <TextBox Grid.Column="1" 
                                     BorderThickness="1" 
                                     BorderBrush="#30363D" 
                                     Padding="5" 
                                     Text="{Binding InputEmail}" 
                                     Foreground="#C9D1D9">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>
                        </Grid>
                        
                        <!-- Şifre Girdisi -->
                        <Grid Grid.Row="2" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/padlock.png" 
                                   Width="20" Height="20" 
                                   Margin="5" />
                            
                            <!-- Maskeli şifre için PasswordBox -->
                            <PasswordBox Grid.Column="1"
                                         BorderThickness="1"
                                         BorderBrush="#30363D"
                                         Padding="5"
                                         Foreground="#C9D1D9"
                                         Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToCollapsedConverter}}"
                                         local:PasswordBoxAssistant.BindPassword="True"
                                         local:PasswordBoxAssistant.BoundPassword="{Binding InputPassword, Mode=TwoWay}">
                                <PasswordBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </PasswordBox.Background>
                            </PasswordBox>

                            <!-- Görünür şifre için TextBox -->
                            <TextBox Grid.Column="1"
                                     BorderThickness="1"
                                     BorderBrush="#30363D"
                                     Padding="5"
                                     Text="{Binding InputPassword, Mode=TwoWay}"
                                     Foreground="#C9D1D9"
                                     Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>

                            <!-- Göz butonu -->
                            <Button Grid.Column="1" 
                                    Width="20" Height="20" 
                                    Margin="5" 
                                    HorizontalAlignment="Right" 
                                    Foreground="{x:Null}" 
                                    BorderBrush="{x:Null}" 
                                    Command="{Binding TogglePasswordVisibilityCommand}">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding EyeIconSource}" />
                                </Button.Background>
                            </Button>
                        </Grid>

                        <Grid Grid.Row="3" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <CheckBox Content="Remember me" 
                                      Foreground="#8B949E" />
                            <Button Grid.Column="1" 
                                    Content="Forgot password?" 
                                    Foreground="#8B949E" 
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right" 
                                    Background="{x:Null}" 
                                    BorderBrush="{x:Null}" 
                                    FontStyle="Italic"
                                    Command="{Binding ShowForgotCommand}" />
                        </Grid>

                        <Button Content="Login" 
                                Grid.Row="4" 
                                Margin="20,10" 
                                Background="#238636" 
                                Foreground="#C9D1D9" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Center"
                                Width="200"
                                Height="20"
                                Padding="10"
                                Command="{Binding LoginButton_Click}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Register Grid -->
            <Grid x:Name="Register" Visibility="{Binding RegisterVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="518*"/>
                    <ColumnDefinition Width="47*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="102*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                    <Border.Background>
                        <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Source="/Images/Icons/add.png" 
                               Width="136" 
                               Grid.Row="0" 
                               HorizontalAlignment="Center" 
                               Margin="0,20,0,10" />

                        <Button Grid.Row="0" 
                                Content="Go To Back" 
                                Foreground="#C9D1D9" 
                                FontSize="15"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Background="{x:Null}" 
                                BorderBrush="{x:Null}" 
                                
                                Margin="10,10,0,0"
                                Command="{Binding ShowLoginCommand}" />

                        <!-- Kullanıcı Adı -->
                        <Grid Grid.Row="1" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/user.png" 
                                   Width="20" Height="20" 
                                   Margin="5" />

                            <!-- Kullanıcı Adı Girdisi -->
                            <TextBox Grid.Column="1" 
                                     Width="240"
                                     BorderThickness="1" 
                                     BorderBrush="#30363D" 
                                     Padding="5" 
                                     Text="{Binding InputUsername, UpdateSourceTrigger=PropertyChanged}"
                                     Foreground="#C9D1D9">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>

                            <!-- Onay ikonu -->
                            <Image Grid.Column="2" 
                                   Source="{Binding UsernameApprovalIconSource}" 
                                   Width="20" Height="20" Margin="5" 
                                   HorizontalAlignment="Right" />
                        </Grid>
                        
                        <!-- Eposta -->
                        <Grid Grid.Row="2" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/email.png" 
                                   Width="20" Height="20" 
                                   Margin="5" />

                            <!-- Email Girdisi -->
                            <TextBox Grid.Column="1" 
                                     Width="240"
                                     BorderThickness="1" 
                                     BorderBrush="#30363D" 
                                     Padding="5" 
                                     Text="{Binding InputEmail, UpdateSourceTrigger=PropertyChanged}"
                                     Foreground="#C9D1D9">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>
                            
                            <!-- Onay ikonu -->
                            <Image Grid.Column="2" 
                                   Source="{Binding EmailApprovalIconSource}" 
                                   Width="20" Height="20" 
                                   Margin="5" HorizontalAlignment="Right" />
                        </Grid>
                        
                        <!-- Şifre Girdisi -->
                        <Grid Grid.Row="3" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/padlock.png" 
                                   Width="20" Height="20" 
                                   Margin="5" />
                            
                            <!-- Maskeli şifre için PasswordBox -->
                            <PasswordBox Grid.Column="1"
                                         BorderThickness="1"
                                         BorderBrush="#30363D"
                                         Width="240"
                                         Padding="5"
                                         Foreground="#C9D1D9"
                                         Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToCollapsedConverter}}"
                                         local:PasswordBoxAssistant.BindPassword="True"
                                         local:PasswordBoxAssistant.BoundPassword="{Binding InputPassword, Mode=TwoWay}">
                                <PasswordBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </PasswordBox.Background>
                            </PasswordBox>

                            <!-- Görünür şifre için TextBox -->
                            <TextBox Grid.Column="1"
                                     BorderThickness="1"
                                     BorderBrush="#30363D"
                                     Width="240"
                                     Padding="5"
                                     Text="{Binding InputPassword, Mode=TwoWay}"
                                     Foreground="#C9D1D9"
                                     Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>

                            <!-- Göz butonu -->
                            <Button Grid.Column="1" 
                                    Width="20" Height="20" 
                                    Margin="5" 
                                    HorizontalAlignment="Right" 
                                    Foreground="{x:Null}" 
                                    BorderBrush="{x:Null}" 
                                    Command="{Binding TogglePasswordVisibilityCommand}">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding EyeIconSource}" />
                                </Button.Background>
                            </Button>

                            <!-- Onay ikonu -->
                            <Image Grid.Column="2" 
                                   Source="{Binding PasswordApprovalIconSource}" 
                                   Width="20" Height="20" 
                                   Margin="5" 
                                   HorizontalAlignment="Right" />
                        </Grid>

                        <Grid Grid.Row="4" Margin="257,10,107,10" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <CheckBox Content="I approve." 
                                      Foreground="#8B949E" 
                                      HorizontalAlignment="Right"/>
                        </Grid>

                        <Button Content="Register" 
                                Grid.Row="5" 
                                Margin="20,10" 
                                Background="#238636" 
                                Foreground="#C9D1D9" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Center"
                                Width="200"
                                Height="20"
                                Padding="10"
                                Command="{Binding RegisterCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Forgot Grid -->
            <Grid x:Name="Forgot" Visibility="{Binding ForgotVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="518*"/>
                    <ColumnDefinition Width="47*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="102*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                    <Border.Background>
                        <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Source="/Images/Icons/message.png" 
                               Width="136" 
                               Grid.Row="0" 
                               HorizontalAlignment="Center" 
                               Margin="0,20,0,10" />

                        <Button Grid.Row="0" 
                                Content="Go To Back" 
                                Foreground="#C9D1D9" 
                                FontSize="15"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Background="{x:Null}" 
                                BorderBrush="{x:Null}" 
                                
                                Margin="10,10,0,0"
                                Command="{Binding ShowLoginCommand}" />

                        <Grid Grid.Row="1" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/user.png" 
                                   Width="20" Height="20" 
                                   Margin="5" />
                            <TextBox Grid.Column="1" 
                                     BorderThickness="1" 
                                     BorderBrush="#30363D" 
                                     Padding="5" 
                                     Text="Username" 
                                     Foreground="#C9D1D9">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>
                        </Grid>

                        <Grid Grid.Row="2" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/email.png" 
                                   Width="20" Height="20" 
                                   Margin="5" />
                            <TextBox Grid.Column="1" 
                                     BorderThickness="1" 
                                     BorderBrush="#30363D" 
                                     Padding="5" 
                                     Text="Email" 
                                     Foreground="#C9D1D9">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>
                        </Grid>

                        <Button Content="Send Code" 
                                Grid.Row="3" 
                                Margin="20,10" 
                                Background="#238636" 
                                Foreground="#C9D1D9" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Center"
                                Width="200"
                                Height="20"
                                Padding="10"
                                Command="{Binding ShowCodeVerificationCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- CodeVerification Grid -->
            <Grid x:Name="CodeVerification" Visibility="{Binding CodeVerificationVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="518*"/>
                    <ColumnDefinition Width="47*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="102*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                    <Border.Background>
                        <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Source="/Images/Icons/done.png" 
                               Width="136" 
                               Grid.Row="0" 
                               HorizontalAlignment="Center" 
                               Margin="0,20,0,10" />

                        <Button Grid.Row="0" 
                                Content="Go To Back" 
                                Foreground="#C9D1D9" 
                                FontSize="15"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Background="{x:Null}" 
                                BorderBrush="{x:Null}" 
                                
                                Margin="10,10,0,0"
                                Command="{Binding ShowLoginCommand}" />

                        <Grid Grid.Row="1" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/verify.png" 
                                   Width="20" Height="20" 
                                   Margin="5" />
                            <TextBox Grid.Column="1" 
                                     BorderThickness="1" 
                                     BorderBrush="#30363D" 
                                     Padding="5" 
                                     Text="{Binding InputCode}" 
                                     Foreground="#C9D1D9">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>
                        </Grid>

                        <Button Content="Send Code" 
                                Grid.Row="3" 
                                Margin="20,10" 
                                Background="#238636" 
                                Foreground="#C9D1D9" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Center"
                                Width="200"
                                Height="20"
                                Padding="10"
                                Command="{Binding ShowResetPasswordCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <TextBlock Grid.Row="2" 
                                   Text="{Binding CounterText}"
                                   Foreground="#F85149" FontSize="15" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                </Border>
            </Grid>

            <!-- ResetPassword Grid -->
            <Grid x:Name="ResetPassword" Visibility="{Binding ResetPasswordVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="518*"/>
                    <ColumnDefinition Width="47*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="102*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="#30363D" BorderThickness="2,2,2,2" Margin="0,7,0,0" Grid.Column="1" CornerRadius="10,10,10,10" Grid.Row="1">
                    <Border.Background>
                        <SolidColorBrush Color="#161B22" Opacity="0.7"/>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Source="/Images/Icons/passwordpanel.png" 
                   Width="136" 
                   Grid.Row="0" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,10" />

                        <Button Grid.Row="0" 
                    Content="Go To Back" 
                    Foreground="#C9D1D9" 
                    FontSize="15"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Background="{x:Null}" 
                    BorderBrush="{x:Null}" 
                    Margin="10,10,0,0"
                    Command="{Binding ShowLoginCommand}" />

                        <Grid Grid.Row="2" Margin="20,10" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/padlock.png" 
                                Width="20" Height="20" 
                                Margin="5" />

                            <!-- Maskeli şifre için PasswordBox -->
                            <PasswordBox Grid.Column="1"
                                         BorderThickness="1"
                                         BorderBrush="#30363D"
                                         Width="240"
                                         Padding="5"
                                         Foreground="#C9D1D9"
                                         Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToCollapsedConverter}}"
                                         local:PasswordBoxAssistant.BindPassword="True"
                                         local:PasswordBoxAssistant.BoundPassword="{Binding InputPassword, Mode=TwoWay}">
                                     <PasswordBox.Background>
                                        <SolidColorBrush Color="White" Opacity="0"/>
                                     </PasswordBox.Background>
                            </PasswordBox>

                            <!-- Görünür şifre için TextBox -->
                            <TextBox Grid.Column="1"
                                     BorderThickness="1"
                                     BorderBrush="#30363D"
                                     Width="240"
                                     Padding="5"
                                     Text="{Binding InputPassword, Mode=TwoWay}"
                                     Foreground="#C9D1D9"
                                     Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBox.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>

                            <!-- Göz butonu -->
                            <Button Grid.Column="1" 
                                    Width="20" Height="20" 
                                    Margin="5" 
                                    HorizontalAlignment="Right" 
                                    Foreground="{x:Null}" 
                                    BorderBrush="{x:Null}" 
                                    Command="{Binding TogglePasswordVisibilityCommand}">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding EyeIconSource}" />
                                </Button.Background>
                            </Button>

                            <!-- Onay ikonu -->
                            <Image Grid.Column="2" 
                                   Source="{Binding PasswordApprovalIconSource}" 
                                   Width="20" Height="20" 
                                   Margin="5" 
                                   HorizontalAlignment="Right" />
                        </Grid>

                        <Button Content="Change" 
                    Grid.Row="3" 
                    Margin="20,10" 
                    Background="#238636" 
                    Foreground="#C9D1D9" 
                    FontWeight="Bold" 
                    HorizontalAlignment="Center"
                    Width="200"
                    Height="20"
                    Padding="10"
                    Command="{Binding ShowLoginCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Grid x:Name="WelcomeGrid" Visibility="{Binding WelcomeVisibility}">
            <Frame x:Name="FirstWelcomePanelFrame" NavigationUIVisibility="Hidden" Navigated="FirstWelcomePanelFrame_Navigated"/>
        </Grid>
    </Grid>
</Window>