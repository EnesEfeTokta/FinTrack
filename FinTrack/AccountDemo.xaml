<Window x:Class="FinTrack.AccountDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTrack"
        mc:Ignorable="d"
        Title="FinTrack Account" Height="650" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#0D1117">
        <!-- Ana Grid: Sol menü ve sağ içerik alanı -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Background="#161B22" Grid.Column="0">
            <StackPanel>
                <!-- Kullanıcı Bilgisi -->
                <Border Margin="10" CornerRadius="50" Width="100" Height="100" Background="White">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="https://via.placeholder.com/100" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <TextBlock Text="ENES EFE TOKTA" HorizontalAlignment="Center" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" Margin="0,5,0,20"/>

                <!-- Menü Öğeleri -->
                <Button Content="🏠 Dashboard" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📊 Accounting" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="💰 Budgeting" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="🎯 Targets" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📋 Reports" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="👤 Account" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Ana İçerik Alanı -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Başlık ve Butonlar -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ACCOUNT" FontSize="24" FontWeight="Bold" Foreground="#C9D1D9" Margin="0,0,0,20" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="🔔" Background="#21262D" Foreground="#C9D1D9" BorderThickness="0" FontSize="20" Margin="0,0,10,0" ToolTip="Bildirimler">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="🔔" FontSize="20"/>
                                    <Ellipse Width="16" Height="16" Fill="#F85149" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="2"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="3" Foreground="#C9D1D9" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button Content="⚙️" Background="#21262D" Foreground="#C9D1D9" BorderThickness="0" FontSize="20" ToolTip="Ayarlar"/>
                </StackPanel>
            </Grid>

            <!-- Üst Satır: Kullanıcı Bilgileri -->
            <Border Grid.Row="1" Background="#161B22" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Kullanıcı Bilgileri" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Kullanıcı Adı: ENES EFE TOKTA" Foreground="#C9D1D9" FontSize="14" Margin="0,10,0,0"/>
                    <TextBlock Text="E-posta: eneseftokta@example.com" Foreground="#C9D1D9" FontSize="14" Margin="0,5,0,0"/>
                    <TextBlock Text="Kayıt Tarihi: 01/01/2024" Foreground="#C9D1D9" FontSize="14" Margin="0,5,0,0"/>
                    <TextBlock Text="Son Giriş: 18/03/2025" Foreground="#C9D1D9" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Orta Satır: Hesap Ayarları ve Hesap İşlemleri -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Hesap Ayarları -->
                    <ColumnDefinition Width="*"/>
                    <!-- Hesap İşlemleri -->
                </Grid.ColumnDefinitions>
                <!-- Hesap Ayarları -->
                <Border Grid.Column="0" Background="#161B22" CornerRadius="10" Padding="15" Margin="0,10,10,0">
                    <StackPanel>
                        <TextBlock Text="Hesap Ayarları" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Şifre Değiştir" Foreground="#C9D1D9" FontSize="14" Margin="0,10,0,0"/>
                        <TextBox Width="200" Margin="0,5,0,0" Padding="5" Text="Eski Şifre" Foreground="#8B949E" HorizontalAlignment="Center"/>
                        <TextBox Width="200" Margin="0,5,0,0" Padding="5" Text="Yeni Şifre" Foreground="#8B949E" HorizontalAlignment="Center"/>
                        <TextBox Width="200" Margin="0,5,0,0" Padding="5" Text="Yeni Şifre (Tekrar)" Foreground="#8B949E" HorizontalAlignment="Center"/>
                        <Button Content="Şifreyi Güncelle" Background="#238636" Foreground="#C9D1D9" Width="150" Margin="0,10,0,0" Padding="5" HorizontalAlignment="Center"/>
                        <TextBlock Text="Bildirim Ayarları" Foreground="#C9D1D9" FontSize="14" Margin="0,10,0,0"/>
                        <ToggleButton Content="Bildirimleri Aç/Kapa" IsChecked="True" Width="150" Margin="0,5,0,0" HorizontalAlignment="Center" Foreground="#C9D1D9" Background="#30363D"/>
                        <TextBlock Text="Dil Seçimi" Foreground="#C9D1D9" FontSize="14" Margin="0,10,0,0"/>
                        <ComboBox Width="200" Margin="0,5,0,0" HorizontalAlignment="Center" SelectedIndex="0">
                            <ComboBoxItem Content="Türkçe"/>
                            <ComboBoxItem Content="English"/>
                            <ComboBoxItem Content="Deutsch"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
                <!-- Hesap İşlemleri -->
                <Border Grid.Column="1" Background="#161B22" CornerRadius="10" Padding="15" Margin="10,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Hesap İşlemleri" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Button Content="Hesaptan Çıkış Yap" Background="#238636" Foreground="#C9D1D9" Width="200" Margin="0,20,0,0" Padding="5" HorizontalAlignment="Center"/>
                        <Button Content="Hesabı Sil" Background="#F85149" Foreground="#C9D1D9" Width="200" Margin="0,10,0,0" Padding="5" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>