<Window x:Class="FinTrack.BudgetingDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTrack"
        mc:Ignorable="d"
        Title="FinTrack Budgeting" Height="650" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF272537">
        <!-- Ana Grid: Sol menü ve sağ içerik alanı -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Background="#FF2D3E50" Grid.Column="0">
            <StackPanel>
                <!-- Kullanıcı Bilgisi -->
                <Border Margin="10" CornerRadius="50" Width="100" Height="100" Background="White">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="https://via.placeholder.com/100" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <TextBlock Text="ENES EFE TOKTA" HorizontalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,5,0,20"/>

                <!-- Menü Öğeleri -->
                <Button Content="🏠 Dashboard" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📊 Accounting" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="💰 Budgeting" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="🎯 Targets" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📋 Reports" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="👤 Account" Background="Transparent" Foreground="White" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Ana İçerik Alanı -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Başlık ve Butonlar -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" VerticalAlignment="Center"><Run Language="tr-tr" Text="BUDGETING"/></TextBlock>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="🔔" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="20" Margin="0,0,10,0" ToolTip="Bildirimler">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="🔔" FontSize="20"/>
                                    <Ellipse Width="16" Height="16" Fill="Red" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="2"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="3" Foreground="White" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button Content="⚙️" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="20" ToolTip="Ayarlar"/>
                </StackPanel>
            </Grid>

            <!-- İçerik Alanı: Kutucuklar -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Kutucuk 1: Yeni Bütçe Oluştur -->
                <Border Grid.Row="0" Grid.Column="0" Background="#FF4DA8DA" CornerRadius="10" Padding="15" Margin="0,0,10,10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Yeni Bütçe Oluştur" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Bütçe İsmi:" Foreground="White" Margin="0,10,0,0"/>
                        <TextBox x:Name="BudgetNameInput" Width="200" Margin="0,5,0,0" Text="Mart 2025 Bütçesi" Foreground="Gray" HorizontalAlignment="Left"/>
                        <TextBlock Text="Harcama Kategorileri:" Foreground="White" Margin="0,10,0,0"/>
                        <ComboBox x:Name="CategoryComboBox" Width="200" Margin="0,5,0,0" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Gıda"/>
                            <ComboBoxItem Content="Eğlence"/>
                            <ComboBoxItem Content="Ulaşım"/>
                            <ComboBoxItem Content="Diğer"/>
                        </ComboBox>
                        <TextBlock Text="Hedef Miktar:" Foreground="White" Margin="0,10,0,0"/>
                        <TextBox x:Name="TargetAmountInput" Width="200" Margin="0,5,0,0" Text="2000 TL" Foreground="Gray" HorizontalAlignment="Left"/>
                        <Button x:Name="CreateBudgetButton" Content="➕ Oluştur" Background="#FFEF476F" Foreground="White" Width="176" VerticalAlignment="Bottom" Margin="0,24.1,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Kutucuk 2: Bütçe Listesi ve Harcama Durumu -->
                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Background="#FF4DA8DA" CornerRadius="10" Padding="15" Margin="10,0,10,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Bütçe Listesi ve Harcama Durumu" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <ListBox x:Name="BudgetList" Height="400" Margin="0,10,0,0" Background="Transparent" BorderThickness="0">
                            <ListBoxItem>
                                <StackPanel>
                                    <Border Background="#FFEF476F" CornerRadius="5" Padding="5" Margin="0,0,0,5" Width="60" HorizontalAlignment="Left" ToolTip="Bütçe aşıldı!">
                                        <TextBlock Text="Aşıldı" Foreground="White" FontSize="10" TextAlignment="Center"/>
                                    </Border>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <StackPanel Width="300">
                                            <TextBlock Text="Mart 2025 Bütçesi - Gıda: 2.000 TL" Foreground="White"/>
                                            <TextBlock Text="Harcanan: 1.500 TL" Foreground="White" FontSize="12" Margin="0,5,0,0"/>
                                            <ProgressBar Value="75" Maximum="100" Width="200" Height="10" Margin="0,5,0,0" Background="#FF2D3E50" Foreground="#FFEF476F" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem>
                                <StackPanel>
                                    <Border Background="#FF2ECC71" CornerRadius="5" Padding="5" Margin="0,0,0,5" Width="60" HorizontalAlignment="Left" ToolTip="Bütçe aşılmadı!">
                                        <TextBlock Text="Aşılmadı" Foreground="White" FontSize="10" TextAlignment="Center"/>
                                    </Border>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <StackPanel Width="300">
                                            <TextBlock Text="Mart 2025 Bütçesi - Eğlence: 500 TL" Foreground="White"/>
                                            <TextBlock Text="Harcanan: 400 TL" Foreground="White" FontSize="12" Margin="0,5,0,0"/>
                                            <ProgressBar Value="80" Maximum="100" Width="200" Height="10" Margin="0,5,0,0" Background="#FF2D3E50" Foreground="#FFEF476F" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Kutucuk 3: Bütçe Düzenle/Sil -->
                <Border Grid.Row="0" Grid.Column="2" Background="#FF4DA8DA" CornerRadius="10" Padding="15" Margin="10,0,0,10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Bütçe Düzenle/Sil" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <ComboBox x:Name="BudgetSelectComboBox" Width="200" Margin="0,10,0,0" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Mart 2025 Bütçesi - Gıda"/>
                            <ComboBoxItem Content="Mart 2025 Bütçesi - Eğlence"/>
                        </ComboBox>
                        <TextBlock Text="Bütçe İsmi:" Foreground="White" Margin="0,10,0,0"/>
                        <TextBox x:Name="EditBudgetNameInput" Width="200" Margin="0,5,0,0" Text="Mart 2025 Bütçesi" Foreground="Gray" HorizontalAlignment="Left"/>
                        <TextBlock Text="Harcama Kategorileri:" Foreground="White" Margin="0,10,0,0"/>
                        <ComboBox x:Name="EditCategoryComboBox" Width="200" Margin="0,5,0,0" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Gıda"/>
                            <ComboBoxItem Content="Eğlence"/>
                            <ComboBoxItem Content="Ulaşım"/>
                            <ComboBoxItem Content="Diğer"/>
                        </ComboBox>
                        <TextBlock Text="Hedef Miktar:" Foreground="White" Margin="0,10,0,0"/>
                        <TextBox x:Name="EditTargetAmountInput" Width="200" Margin="0,5,0,0" Text="2000 TL" Foreground="Gray" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                            <Button x:Name="UpdateBudgetButton" Content="✔️ Güncelle" Background="#FFEF476F" Foreground="White" Margin="0,0,10,0" Width="88" FontSize="10"/>
                            <Button x:Name="DeleteBudgetButton" Content="🗑️ Sil" Background="#FFEF476F" Foreground="White" Width="67" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
