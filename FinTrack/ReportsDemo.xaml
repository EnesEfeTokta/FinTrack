<Window x:Class="FinTrack.ReportsDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTrack"
        mc:Ignorable="d"
        Title="FinTrack Reports" Height="650" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#0D1117">
        <!-- Ana Grid: Sol menü ve sağ içerik alanı -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Background="#161B22" Grid.Column="0">
            <StackPanel>
                <!-- Kullanıcı Bilgisi -->
                <Border Margin="10" CornerRadius="50" Width="100" Height="100" Background="White">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="https://via.placeholder.com/100" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <TextBlock Text="ENES EFE TOKTA" HorizontalAlignment="Center" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" Margin="0,5,0,20"/>

                <!-- Menü Öğeleri -->
                <Button Content="🏠 Dashboard" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📊 Accounting" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="💰 Budgeting" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="🎯 Targets" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="📋 Reports" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
                <Button Content="👤 Account" Background="Transparent" Foreground="#C9D1D9" BorderThickness="0" Padding="10" HorizontalContentAlignment="Left" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Ana İçerik Alanı -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Başlık ve Butonlar -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="REPORTS" FontSize="24" FontWeight="Bold" Foreground="#C9D1D9" Margin="0,0,0,20" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="🔔" Background="#21262D" Foreground="#C9D1D9" BorderThickness="0" FontSize="20" Margin="0,0,10,0" ToolTip="Bildirimler">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="🔔" FontSize="20"/>
                                    <Ellipse Width="16" Height="16" Fill="#F85149" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="2"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="3" Foreground="#C9D1D9" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button Content="⚙️" Background="#21262D" Foreground="#C9D1D9" BorderThickness="0" FontSize="20" ToolTip="Ayarlar"/>
                </StackPanel>
            </Grid>

            <!-- Üst Satır: Rapor Özeti ve Rapor Gönder -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <!-- Rapor Özeti -->
                    <ColumnDefinition Width="*"/>
                    <!-- Rapor Gönder -->
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="#161B22" CornerRadius="10" Padding="15" Margin="0,0,10,10">
                    <StackPanel>
                        <TextBlock Text="Rapor Özeti" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Toplam Gelir: 150.000 TL" Foreground="#C9D1D9" FontSize="18" Margin="0,5,0,0"/>
                        <TextBlock Text="Toplam Gider: 90.000 TL" Foreground="#C9D1D9" FontSize="16" Margin="0,5,0,0"/>
                        <TextBlock Text="Net Durum: 60.000 TL" Foreground="#C9D1D9" FontSize="16" Margin="0,5,0,0"/>
                        <TextBlock Text="Son Güncelleme: 18/03/2025" Foreground="#C9D1D9" FontSize="14" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="#161B22" CornerRadius="10" Padding="15" Margin="10,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Rapor Gönder" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <ComboBox Width="200" Margin="0,10,0,0" HorizontalAlignment="Center" SelectedIndex="0" ToolTip="Gönderilecek rapor türünü seçin">
                            <ComboBoxItem Content="Seçiniz..." IsEnabled="False"/>
                            <ComboBoxItem Content="Aylık Rapor"/>
                            <ComboBoxItem Content="Yıllık Rapor"/>
                            <ComboBoxItem Content="Kategoriye Göre Rapor"/>
                            <ComboBoxItem Content="Gelir-Gider Karşılaştırması"/>
                        </ComboBox>
                        <TextBox Width="200" Margin="0,10,0,0" Padding="5" Text="E-posta Adresi" Foreground="#8B949E" HorizontalAlignment="Center"/>
                        <Button Content="Raporu Gönder" Background="#238636" Foreground="#C9D1D9" Width="150" Margin="0,10,0,0" Padding="5" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Orta Satır: Rapor Detayları ve Rapor Önizleme -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <!-- Rapor Detayları -->
                    <ColumnDefinition Width="*"/>
                    <!-- Rapor Önizleme -->
                </Grid.ColumnDefinitions>
                <!-- Rapor Detayları -->
                <Border Grid.Column="0" Background="#161B22" CornerRadius="10" Padding="15" Margin="0,10,10,0">
                    <StackPanel>
                        <TextBlock Text="Rapor Detayları" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Kullanılabilir Rapor Türleri" Foreground="#C9D1D9" FontSize="14" HorizontalAlignment="Center"/>
                            <ListBox Grid.Row="1" Margin="0,10,0,0" Background="Transparent" BorderThickness="0">
                                <ListBoxItem Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Aylık Rapor" Foreground="#C9D1D9" FontSize="14"/>
                                        <TextBlock Text="Mart 2025: Gelir 50.000 TL, Gider 30.000 TL, Net 20.000 TL" Foreground="#C9D1D9" FontSize="12" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Yıllık Rapor" Foreground="#C9D1D9" FontSize="14"/>
                                        <TextBlock Text="2025: Gelir 150.000 TL, Gider 90.000 TL, Net 60.000 TL" Foreground="#C9D1D9" FontSize="12" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Kategoriye Göre Rapor" Foreground="#C9D1D9" FontSize="14"/>
                                        <TextBlock Text="Gıda: 20.000 TL, Ulaşım: 15.000 TL" Foreground="#C9D1D9" FontSize="12" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Gelir-Gider Karşılaştırması" Foreground="#C9D1D9" FontSize="14"/>
                                        <TextBlock Text="Gelir: 150.000 TL, Gider: 90.000 TL" Foreground="#C9D1D9" FontSize="12" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </ListBoxItem>
                            </ListBox>
                        </Grid>
                    </StackPanel>
                </Border>
                <!-- Rapor Önizleme -->
                <Border Grid.Column="1" Background="#161B22" CornerRadius="10" Padding="15" Margin="10,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Rapor Önizleme" Foreground="#C9D1D9" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Seçilen Rapor: Aylık Rapor (Mart 2025)" Foreground="#C9D1D9" FontSize="14" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                        <TextBlock Text="Gelir: 50.000 TL" Foreground="#C9D1D9" FontSize="12" Margin="0,5,0,0"/>
                        <TextBlock Text="Gider: 30.000 TL" Foreground="#C9D1D9" FontSize="12" Margin="0,5,0,0"/>
                        <TextBlock Text="Net: 20.000 TL" Foreground="#C9D1D9" FontSize="12" Margin="0,5,0,0"/>
                        <ProgressBar Value="60" Maximum="100" Height="20" Margin="0,10,0,0" Background="#30363D" Foreground="#238636"/>
                        <Button Content="Raporu Dışa Aktar (PDF/Excel)" Background="#238636" Foreground="#C9D1D9" Width="200" Margin="0,10,0,0" Padding="5" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>